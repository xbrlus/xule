{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "XULE",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#built-in-functions" },
		{ "include": "#variables" },
		{ "include": "#double-quoted-strings" },
		{ "include": "#single-quoted-strings" },
		{ "include": "#urls" },
		{ "include": "#comments" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.xule",
				"match": "\\b(assert|constant|else|false|filter|for|function|if|message|namespace|navigate|output-attribute|output|satisfied|severity|true)\\b"
			},
			{
				"name": "keyword.operator.xule",
				"match": "@|#|\\b==\\b|\\b!=\\b"
			}]
		},
		"built-in-functions": {
			"patterns": [{
				"name": "other",
				"captures": { "3": { "name": "support.function.xule" } },
				"match": "(^|(?<=\\*/|[\\s=,;'\"()\\[\\]{}]))((?<![a-zA-Z]])-)?(abs|and|as|date|descendants|dict|dimensions|duration|exists|first)\\b"
			},
			{
				"name": "other",
				"captures": { "3": { "name": "support.function.xule" } },
				"match": "(^|(?<=\\*/|[\\s=,;'\"()\\[\\]{}]))((?<![a-zA-Z]])-)?(from|in|index-of|json-data|list|name|namespace-uri)\\b"
			},
			{
				"name": "other",
				"captures": { "3": { "name": "support.function.xule" } },
				"match": "(^|(?<=\\*/|[\\s=,;'\"()\\[\\]{}]))((?<![a-zA-Z]])-)?(none|not|qname|returns|round|set|skip|substring|taxonomy|where)\\b"
			},
			{
				"name": "support.function.xule",
				"match": "(?<=.)number\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "other",
				"captures": { "1": { "name": "variable.xule" } },
				"match": "(\\$.+?)(?=[\\s=,;.'\"()\\[\\]{}])"
			}]
		},
		"double-quoted-strings": {
			"name": "string.quoted.double.xule",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.xule",
				"match": "\\\\."
			}]
		},
		"single-quoted-strings": {
			"name": "string.quoted.single.xule",
			"begin": "'",
			"end": "'",
			"patterns": [{
				"name": "constant.character.escape.xule",
				"match": "\\\\."
			}]
		},
		"url": {
			"patterns": [{
				"name": "string.xule",
				"match": "http[s]?://\\S+"
			}]
		},
		"comments": {
			"name": "comment.block.xule",
			"begin": "/\\*",
			"end": "\\*/"
		}
	},
	"scopeName": "source.xule"
}