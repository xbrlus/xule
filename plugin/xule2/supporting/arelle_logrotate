/var/log/xbrlus_custom/arelle/arelle_usgaap-2014.log {
        weekly
        missingok
        rotate 5
        size 10M
        compress
        notifempty
        #create 640 root adm
        #sharedscripts
        postrotate
               /etc/init.d/xule restart usgaap-2014 > /dev/null
        endscript
}

