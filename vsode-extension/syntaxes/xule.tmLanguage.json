{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "XULE",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#built-in-functions" },
		{ "include": "#variables" },
		{ "include": "#double-quoted-strings" },
		{ "include": "#single-quoted-strings" },
		{ "include": "#comments" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.xule",
				"match": "\\b(assert|constant|filter|function|message|navigate|satisfied)\\b"
			},
			{
				"name": "keyword.operator.xule",
				"match": "@"
			}]
		},
		"built-in-functions": {
			"patterns": [{
				"name": "support.function.xule",
				"match": "(^|[^\\B\\-])(as|descendants|dimensions|duration|exists|first|from|in|index-of|json-data|name|namespace-uri)\\b"
			},
			{
				"name": "support.function.xule",
				"match": "(^|[^\\B\\-])(not|qname|returns|set|substring|taxonomy|where)\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "other",
				"captures": { "1": { "name": "variable.xule" } },
				"match": "(\\$.+?)[\\s=,;.'\"()\\[\\]{}]"
			}]
		},
		"double-quoted-strings": {
			"name": "string.quoted.double.xule",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.xule",
					"match": "\\\\."
				}
			]
		},
		"single-quoted-strings": {
			"name": "string.quoted.single.xule",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.xule",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.block.xule",
			"begin": "/\\*",
			"end": "\\*/"
		}
	},
	"scopeName": "source.xule"
}